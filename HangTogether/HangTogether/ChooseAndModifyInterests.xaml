<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:chips="clr-namespace:Xamarin.Forms.Chips;assembly=Xamarin.Forms.Chips"
             xmlns:pancakeView="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Class="HangTogether.ChooseAndModifyInterests">
    <ContentPage.Content>
        
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <pancakeView:PancakeView Grid.Row="0" Grid.Column="0" WidthRequest="50" HeightRequest="50" 
                                     CornerRadius="10"  HorizontalOptions="End"
                                     Margin="0,5,20,0" >
                <pancakeView:PancakeView.Shadow>
                    <pancakeView:DropShadow Color="#000"/>
                </pancakeView:PancakeView.Shadow>
                
                <pancakeView:PancakeView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTapMenu" />
                </pancakeView:PancakeView.GestureRecognizers>
                
                <Image Source="mes_bg/ic_menu.png" Aspect="AspectFill" />
            </pancakeView:PancakeView>
            
            
            <Frame Grid.Row="1" Grid.Column="0" Margin="10,0,10,0" CornerRadius="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <SearchBar Grid.Column="0" Grid.Row="0"  VerticalOptions="Center" Placeholder="Find Interests"
                                VerticalTextAlignment="Center" PlaceholderColor="Gray" Margin="0,0,20,0"
                                TextColor="Black" TextChanged="OnUserSearchChanged"/>
                    
                    <pancakeView:PancakeView Grid.Row="0" Grid.Column="1"  WidthRequest="40" HeightRequest="20" 
                                              CornerRadius="10" BackgroundColor="SkyBlue" HorizontalOptions="End"
                                              >
                        <pancakeView:PancakeView.Shadow>
                            <pancakeView:DropShadow Color="#000"/>
                        </pancakeView:PancakeView.Shadow>
                        
                        <pancakeView:PancakeView.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAddInterests" />
                        </pancakeView:PancakeView.GestureRecognizers>
                        
                        <Image Source="https://www.findool.com/images/avatars/avatar.png" Aspect="AspectFill"/>
                    </pancakeView:PancakeView>
                    
                </Grid>
            </Frame>
            
            
            <pancakeView:PancakeView Grid.Row="2" Grid.Column="0" VerticalOptions="FillAndExpand"
                                     HorizontalOptions="FillAndExpand" CornerRadius="10,10,10,10"
                                     Margin="10,0,10,10" BackgroundColor="White">
                <pancakeView:PancakeView.Shadow>
                    <pancakeView:DropShadow Color="#000"/>
                </pancakeView:PancakeView.Shadow>
                
                <ScrollView Grid.Row="2" Grid.Column="0" VerticalOptions="FillAndExpand"
                        HorizontalOptions="FillAndExpand" VerticalScrollBarVisibility="Always"
                         >
                    <FlexLayout 
                                Wrap="Wrap"
                                Direction="Row"
                                JustifyContent="Start"
                                AlignItems="Start"
                                AlignContent="Start"
                                Padding="8"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="FillAndExpand"
                                x:Name="layoutInterest"
                                >
                    </FlexLayout>
                </ScrollView>
            </pancakeView:PancakeView>
 
            
            
        </Grid>
    </ContentPage.Content>
</ContentPage>